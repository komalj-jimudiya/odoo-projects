<odoo>
  <data>
     <record id="project_config_github_token" model="ir.ui.view">
            <field name="name">project.config.settings.github.token</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="project.res_config_settings_view_form"/>
            <field name="arch" type="xml">

                <!-- Add inside the Project App Settings -->
                <xpath expr="//app[@name='project']/block[@id='tasks_management']" position="inside">

                    <setting id="project_github_token_setting" help="Store GitHub Token for integration">
                        <field name="github_token"/>
                    </setting>

                </xpath>

            </field>
        </record>
</data>
</odoo>